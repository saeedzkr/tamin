    <servlet>
        <servlet-name>Main</servlet-name>
        <servlet-class>org.tamin.web.Controller.MainController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Main</servlet-name>
        <url-pattern>/main.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>5</session-timeout>
    </session-config>
</web-app>
